{
	"compilerOptions": {
		"outDir": "./dist",
	  "baseUrl": ".",
	  "paths": {
			"src/*": ["src/*"],
			"@entities/*": ["src/entities/*"],
			"@pages/*": ["src/pages/*"],
			"@widgets/*": ["src/widgets/*"],
			"@features/*": ["src/features/*"],
			"@shared/*": ["src/shared/*"],
	  },
	  "lib": ["dom", "dom.iterable", "esnext"],
	  "allowJs": true,
	  "allowSyntheticDefaultImports": true,
	  "skipLibCheck": true,
	  "esModuleInterop": true,
	  "target": "ES2015",
	  "module": "esnext",
	  "sourceMap": true,
	  "noImplicitAny": true,
	  "downlevelIteration": true,
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "jsx": "react"
	}
}
  